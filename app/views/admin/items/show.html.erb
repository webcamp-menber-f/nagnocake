<div class='container'>
  <h3>商品詳細</h3>
   <%= form_with model:@item, url:admin_items_path, method: :post, local: true do |form| %>
    <table class='table'>
    <tr>
      <th>商品画像</th>
      <td><%= image_tag @item.get_image(200,200), class: 'item-image' if @item.image.attached? %></td>
    </tr>
    <tr>
      <th><label for="item_item_name">商品名</label></th>
      <td><%= @item.item_name %></td>
    </tr>
    <tr>
      <th><label for="item_item_ex">商品説明</label></th>
      <td><%= @item.item_ex %></td>
    </tr>
    <tr>
      <th><label for="item_goods_genre">ジャンル</label></th>
      <td><%= GoodsGenre.find(@item.goods_genre_id).genre_name %></td>
    </tr>
    <tr>
      <th><label for="item_price"><br>税込価格(税抜価格)</label></th>
      <td><%= @item.add_tax_sales_price %> ( <%= @item.price.to_s(:delimited) %> )円</td>
    </tr>
    <tr>
      <th><label for="item_status">販売ステータス</label></th>
      <td><%= @item.status ? '販売停止中' : '販売中' %></td>
    </tr>
    <tr>
      <td><%= link_to '編集する', edit_admin_item_path(@item), class: 'btn btn-success' %></td>
      <td><%= link_to "削除", admin_item_path(@item), method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete this item?" } %></td>
    </tr>
    </table>
    <% end %>

</div>