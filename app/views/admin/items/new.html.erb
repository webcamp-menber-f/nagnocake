<%= form_with model:@item, url:admin_items_path, method: :post, local: true, multipart: true do |form| %>
<div class='container'>
  <h3>商品新規登録</h3>
  <table class='table'>
    <tr>
      <th>商品画像</th>
      <td><%= form.file_field :image %></td>
    </tr>
    <tr>
      <th><label for="item_item_name">商品名</label></th>
      <td><%= form.text_field:item_name %></td>
    </tr>
    <tr>
      <th><label for="item_item_ex">商品説明</label></th>
      <td><%= form.text_field:item_ex %></td>
    </tr>
    <tr>
      <th><label for="item_goods_genre">ジャンル</label></th>
      <td><%= form.select :goods_genre_id, options_for_select(GoodsGenre.all.map { |g| [g.genre_name, g.id] }, selected: @item.goods_genre_id) %></td>
    </tr>
    <tr>
      <th><label for="item_price">税抜価格</label></th>
      <td><%= form.text_field:price %></td>
    </tr>
    <tr>
      <th><label for="item_status">販売ステータス</label></th>
      <td><%= form.radio_button :status, :true %>
          <%= form.label :status, "販売停止中" %>
          <%= form.radio_button :status, :false %>
          <%= form.label :status, "販売中" %></td>
    </tr>
    <tr>
      <td><%= form.submit '新規登録',class: 'btn btn-success' %></td>
    </tr>
  </table>

</div>
<% end %>
