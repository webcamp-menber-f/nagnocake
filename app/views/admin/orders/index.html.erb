<div class='container'>
  <h3>注文履歴一覧</h3>
    <table class='table'>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
          <td><%= Customer.find(order.customer_id).create_name %></td>
          <td><%= order.order_items.count %></td>
          <td><%= t("enums.order.status.#{order[:status]}") %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
</div>