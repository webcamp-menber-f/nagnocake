<div class='container'>
  <h3>ジャンル一覧・追加</h3>
   <%= form_with model:@goods_genre, url:admin_goods_genres_path(@goods_genre),method: :post, local:true do |f| %>
    <div>
     <td><tr>ジャンル名</tr>
         <tr><%= f.text_field:genre_name, placeholder: "ジャンル名" %></tr>
         <tr><%= f.submit '新規登録',class: 'btn btn-success' %></tr>
     </td>
    </div>
   <% end %>
    <table class='table table-hover table-inverse'>
      <thead>
       <tr>ジャンル</tr>
      </thead>
      <% @goods_genres.each do |goods_genre| %>
       <tr>
         <th><%= goods_genre.genre_name %></th>
         <th><%= link_to '編集する', edit_admin_goods_genre_path(goods_genre), class: 'btn btn-success' %></th>
       </tr>
      <% end %>
    </table>
</div>
