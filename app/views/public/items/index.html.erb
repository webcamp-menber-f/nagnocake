<div class= "container px-5 px-sm-0">
  <div class='row'>
   <div class="col-md-3">
  <%= render "public/goods_genres/goods_genre" ,goods_genres: @goods_genres %>
  </div>
  <div class="col-md-8">
<div class= "top">
<h1 class ="mb-3 pt-3">商品一覧</h1>
</div>
<h4>全<%=@items_count%>件</h4>
<div class= "row">
<% @items.each do |item|%>
 <div class="col-sm-6 col-md-4 mb-4">
   <div class="card">
     <%= link_to image_tag(item.get_image(200,200), class: "card-img-top"), item_path(item.id) %>
    <div class="card-body">
    <h5 class="card-title">商品名：<%=item.item_name %></h5>
    <p class="cart-text">商品値段：￥<%= (item.price*1.10).to_i %></p>
    </div>
   </div>
  </div>
 <% end %>
</div>
      <%= paginate @items %>
  </div>
</div>
</div>