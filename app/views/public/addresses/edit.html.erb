<div class="container">
<%= form_with model: @address,url: address_path(@address.id) ,method: :patch do |f| %>
<div class="from-group row">
   <%= f.label :postal_code, class: "col-sm-2 col-form-label" %>
   <div class="col-sm-10">
 <%= f.text_field :postal_code, class: "form-control", placeholder: "郵便番号（ハイフンなし）" %>
  </div>
</div>
 <div class="form-group row">
 <%= f.label :place, class: "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
   <%= f.text_area :place, class: "form-control", placeholder: "住所" %>
  </div>
 </div> 
 
   <div class="form-group row">
      <%= f.label :name, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", placeholder: "宛名" %>
      </div>
    </div>
    
  <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit '保存', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>