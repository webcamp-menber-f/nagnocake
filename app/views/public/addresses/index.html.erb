<div class= "container mt-5">
 <div class="row justify-content-center">
  <div class="col-md-8">
   <div class="card">
     <div class="card-header">
     <h1 class="h3 mb-o">配送先登録/一覧</h1>
　　　<% if @address.errors.any? %>
　　<div class="alert alert-danger">
 <%= pluralize(@address.errors.count, "error") %> prohibited this address from being saved:
  <ul>
   <% @address.errors.full_messages.each do |message| %>
  <li><%= message %></li>
   <% end %>
　 </ul>
  </div>
 <% end %>
</div>

<%= form_with model: @address, url: addresses_path, method: :post, local: true do |f| %>
    <div class="form-group">
    <%= f.label :postal_code,"郵便番号（ハイフンなし）", class: "h5" %>
    <%= f.text_field :postal_code,class: "form-control", required: true %>
    </div>
    
      <div class="form-group">
       <%= f.label :place,"住所",class: "h5" %>
       <%= f.text_area :place, class: "form-control", required: true %>
      </div>
      
       <div class="form-group">
          <%= f.label :name,"宛名", class: "h5" %>
          <%= f.text_field :name, class: "form-control", required: true %>
      </div>
      
    <p><%= f.submit '新規登録',class: "btn btn-primary" %></p>
  <% end %>
  
<table class= "table mt-5">
  <thead class="thead-light">
   <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.place %></td>
          <td><%= address.name %></td>
          <td><%= link_to"Edit",edit_address_path(address.id),class: "btn btn-success btn-lg"%></td>
          <td><%= link_to"Destroy",address_path(address.id),method: :delete,"data-confirm" => "Are you sure?", class: "btn btn-danger btn-lg" %></td>
        </tr>
       <% end %>
      </tbody>
      </table>
     </div>
    </div>
   </div>
  </div>