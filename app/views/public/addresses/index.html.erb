<div class= "address">
  <h1>配送先登録/一覧</h1>
</div>
<% if @address.errors.any? %>
<%= @address.errors.count %> errors
<ul>
  <% @address.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>
<%= form_with model: @address, url: addresses_path, method: :post, local: true do |f| %>
  <p>郵便番号（ハイフンなし): <%= f.text_field :postal_code %></p>
  <p>住所：　<%=f.text_area :place %></p>
  <p>宛名：　<%=f.text_field :name %></p>
  <p><%= f.submit '新規登録' %></p>
  <% end %>
<table>
  <thead>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.place %></td>
      <td><%= address.name %></td>
      <td><%= link_to"Edit",edit_address_path(address.id),class: "btn btn-success btn-lg"%></td>
      <td><%= link_to"Destroy",address_path(address.id),method: :delete,"data-confirm" => "Are you sure?", class: "btn btn-warning" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
