<div class = "container text-center mt-3">
<div>
  <%= flash[:notice] %>
</div>

<h2>ログイン</h2>

<div class="field">
  会員の方はこちらからログイン
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email,"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label :password,"パスワード" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary btn-lg"  %>
  </div>
<% end %>

<p><%= render "public/shared/links", class: "btn btn-success btn-lg" %>から新規登録を行ってください。</p>
</div>
