<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>




 <div class="field">
    <p>名前
    <%= f.label :first_name, "(姓)" %>
    <%= f.text_field :first_name, autofoucus: true, required: true, placeholder: "姓" %>
    <%= f.label :last_name, "(名)" %>
    <%= f.text_field :last_name, required: true, placeholder: "名" %>
    </p>
  </div>

  <div class="field">
    <p>フリガナ
    <%= f.label :first_name_f, "(セイ)" %>
    <%= f.text_field :first_name_f, required: true, placeholder: "セイ" %>
    <%= f.label :last_name_f, "(メイ)" %>
    <%= f.text_field :last_name_f,  required: true, placeholder: "メイ"%>
    </p>
  </div>

   <div class="field">
    <p>メールアドレス
    <%= f.email_field :email, required: true,placeholder: "sample" %>
    </p>
  </div>

  <div class="field">
    <p>郵便番号（ハイフンなし）
    <%= f.text_field :post,required: true, placeholder: "郵便番号" %>
    </p>
  </div>

  <div class="field">
    <p>住所
    <%= f.text_field :place, required: true,placeholder: "住所" %>
    </p>
  </div>

  <div class="field">
    <p>電話番号（ハイフンなし）
    <%= f.text_field :phone, required: true,placeholder: "000000000" %>
    </p>
  </div>

  <div class="field">
    <p>パスワード（６文字以上）
    <%= f.password_field :password, required: true %>
    </p>
  </div>

  <div class="field">
    <p>パスワード（確認用）
    <%= f.password_field :password_confirmation %>
    </p>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存", class: "btn btn-success btn-lg" %>
  </div>
<% end %>

<div><%= link_to "退会する", customers_withdraw_path,class: "btn btn-danger btn-lg" %></div>
