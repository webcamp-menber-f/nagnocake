<h3>注文内容</h3>

<table>
  <tr>
    <td>商品名</td>
    <td>単価（税込）</td>
    <td>個数</td>
    <td>小計</td>
  </tr>
  <% @sum = 0 %>
  <% @order.order_items.each do |order_item| %>
  <tr>
    <td><%= order_item.item.item_name %></td>
    <td> <%= order_item.item.price %></td>
    <td><%= order_item.count %></td>
    <td><%= order_item.item.price * order_item.count %></td>
    <% @sum = @sum + (order_item.item.price * order_item.count) %>
  </tr>
  <%end%>
</table>

