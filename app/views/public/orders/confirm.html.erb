<h1>注文情報確認</h1>

<table>
  <tr>
    <td>商品名</td>
    <td>単価</td>
    <td>数量</td>
    <td>小計</td>
  </tr>
  <% @sum = 0 %>

<% @carts.each do |cart| %>

  <tr>
    <td>
      <%= image_tag cart.item.image.variant(resize:"60x50") %>
      <%= cart.item.item_name %>
    </td>
    <td><%= cart.item.price %></td>
    <td><%= cart.count %></td>
    <% @sum += cart.item.price*cart.count %>
    <td><%= @sum %></td>
<%end%>
</tr>
</table>

<table>
  <tr>
    <td>送料</td>
    <td>800</td>
  </tr>
  <tr>
    <td>商品合計</td>
    <td><%= @sum %></td>
  </tr>
  <tr>
    <td>請求合計</td>
    <td><%= @sum + 800 %></td>
  </tr>
</table>

<table>
  <tr>
    <td>お支払い方法</td>
    <td><%= @order.pay_i18n %></td>
  </tr>
  <tr>
    <td>お届け先</td>
    <td><%= @order.place %></td>
  </tr>
</table>

<%= form_with model: @order_new, url: orders_path , local: true do |f| %>
  <%= f.hidden_field :current_customer_id, value: current_customer.id %>
  <%= f.hidden_field :pay, value: @order.pay %>
  <%= f.hidden_field :postage, value: 800 %>
  <%= f.hidden_field :postal_code, value: @order.postal_code %>
  <%= f.hidden_field :total_price, value: @sum + 800 %>
  <%= f.hidden_field :place, value: @order.place %>
  <%= f.hidden_field :name, value: @order.name %>

  <%= f.submit "注文を確定する" %>
<%end%>

