<h1>商品履歴一覧</h1>

<div class = "container">
  <div class = "row">
<table class = "table">
  <tr>
    <td>注文日</td>
    <td>配送先</td>
    <td>注文商品</td>
    <td>支払金額</td>
    <td>ステータス</td>
    <td>注文詳細</td>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td>
      <%=  l order.created_at %>
    </td>
    <td>
      <%= order.postal_code %>
      <%= order.place %>
      <%= order.name %>
    </td>
    <td>
      <% order.order_items.each do |order_item| %>
      <%= order_item.item.item_name %>
      <% end %>
    </td>
    <td>
      <%= order.order_items.sum(:count) %>
    </td>
    <td>
      <%= order.status_i18n %></td>
    </td>
    <td>
      <%= link_to "詳細へ", order_path(order), class: "btn btn-primary btn-sm" %>
    </td>
  </tr>
  <%end%>
</table>
</div>
</div>
</div>